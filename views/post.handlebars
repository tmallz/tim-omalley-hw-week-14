{{!-- Post --}}
<div class=" mx-10 my-10">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3 mb-6 md:mb-0 bg-gray-800 text-white">
          {{posts.title}}
            <span id="postDate" class = "origin-top-right absolute right-20 text-white">{{posts.user.username}} {{format_date posts.createdAt}}</span>
        </div>
    </div>
        <div class="block">
            <span class="text-gray-700">{{posts.body}}</span>
        </div>
    </div>
</div>

{{!-- loop to load each comment --}}
{{#each posts.comments}}
    <div class=" mx-10 my-10">
    <div class="bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="w-full px-3 mb-6 md:mb-0 bg-white text-gray">
         {{user.username}} {{format_date createdAt}} <br>
        {{body}}
        </div>
    </div>
    </div>
{{/each}}

{{!-- form to post a comment on the post --}}
<div class=" mx-10 my-10">
  <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <div class="flex flex-wrap -mx-3 mb-6">
  </div>
    <label class="block">
        <span class="text-gray-700">Comment:</span>
    <textarea class="form-textarea mt-1 block w-full" rows="3" placeholder="Enter your comment here." id = "commentBody"></textarea>
    </label>
    <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow" id = "commentBtn">
        Submit
    </button>
  </form>
</div>

<script src="/js/comment.js"></script>